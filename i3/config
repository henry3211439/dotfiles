set $superKey Mod4
set  $ctrlKey Control
set $shiftKey Shift
set   $altKey Mod1

#
set $fileManager nemo
set $internetBrowser firefox

######### Startup ##########
# exec plank
exec aria2c
exec ibus-daemon --desktop=i3 --replace --xim --daemonize

########## Applications ##########
# start a terminal
bindsym $ctrlKey+$altKey+t exec i3-sensible-terminal

# Internet Browser
bindsym $superKey+b exec $internetBrowser

# File Manager
bindsym $superKey+e exec $fileManager

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Inter Bold 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3


# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

########## Media ##########
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@     +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@     -10% && $refresh_i3status
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@   toggle && $refresh_i3status
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym $ctrlKey+KP_Add      exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@     +2% && $refresh_i3status
bindsym $ctrlKey+KP_Subtract exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@     -2% && $refresh_i3status
# bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@   toggle && $refresh_i3status
# bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$superKey to drag floating windows to their wanted position
floating_modifier $superKey


########## Windows ##########
# kill focused window
bindsym $superKey+w kill

# enter fullscreen mode for the focused container
bindsym $superKey+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $superKey+s layout stacking
# bindsym $superKey+w layout tabbed
# bindsym $ctrlKey+$superKey+e layout toggle split

# toggle tiling
bindsym $superKey+space layout toggle tabbed split

# toggle floating
bindsym $shiftKey+$superKey+space floating toggle

# change focus between tiling / floating windows
# bindsym $superKey+space focus mode_toggle

# focus the parent container
#bindsym $superKey+a focus parent

# focus the child container
#bindsym $superKey+d focus child

# start dmenu (a program launcher)
bindsym $superKey+a exec --no-startup-id rofi -config ~/.config/rofi/launchpad.rasi -modi drun -show drun
# A more modern dmenu replacement is rofi:
# bindcode $superKey+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $superKey+40 exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $altKey+Tab           focus next
bindsym $altKey+$shiftKey+Tab focus prev
# bindsym $superKey+k focus down
# bindsym $superKey+l focus up

# alternatively, you can use the cursor keys:
bindsym $superKey+Left focus left
bindsym $superKey+Down focus down
bindsym $superKey+Up focus up
bindsym $superKey+Right focus right

# move focused window
bindsym $superKey+Shift+j move left
bindsym $superKey+Shift+k move down
bindsym $superKey+Shift+l move up
bindsym $superKey+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $superKey+Shift+Left move left
bindsym $superKey+Shift+Down move down
bindsym $superKey+Shift+Up move up
bindsym $superKey+Shift+Right move right

# split in horizontal orientation
bindsym $superKey+h split h

# split in vertical orientation
bindsym $superKey+v split v

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.


########## Workspaces ##########
#
focus_follows_mouse no

# Set default workspace layout mode
workspace_layout tabbed

# Cycle workspaces
bindsym $superKey+Tab       workspace next
bindsym $superKey+Shift+Tab workspace prev


set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $superKey+1 workspace number $ws1
bindsym $superKey+2 workspace number $ws2
bindsym $superKey+3 workspace number $ws3
bindsym $superKey+4 workspace number $ws4
bindsym $superKey+5 workspace number $ws5
bindsym $superKey+6 workspace number $ws6
bindsym $superKey+7 workspace number $ws7
bindsym $superKey+8 workspace number $ws8
bindsym $superKey+9 workspace number $ws9
bindsym $superKey+0 workspace number $ws10

# move focused container to workspace
bindsym $superKey+Shift+1 move container to workspace number $ws1
bindsym $superKey+Shift+2 move container to workspace number $ws2
bindsym $superKey+Shift+3 move container to workspace number $ws3
bindsym $superKey+Shift+4 move container to workspace number $ws4
bindsym $superKey+Shift+5 move container to workspace number $ws5
bindsym $superKey+Shift+6 move container to workspace number $ws6
bindsym $superKey+Shift+7 move container to workspace number $ws7
bindsym $superKey+Shift+8 move container to workspace number $ws8
bindsym $superKey+Shift+9 move container to workspace number $ws9
bindsym $superKey+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $superKey+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $superKey+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $ctrlKey+$superKey+$altKey+BackSpace exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $superKey+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $superKey+r mode "default"
}

bindsym $superKey+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        status_command i3status --config ~/.config/i3/i3status.conf
        # status_command ~/.config/i3/i3status
        # status_command i3blocks -c ~/.config/i3/i3blocks.conf
}

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet
